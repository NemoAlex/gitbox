extends layout
block content
  #gitbox
    .navbar.navbar-default
      .container
        a.navbar-brand(href="/") #{ config.projectName }
    .container
      .row
        .col-md-6.col-md-offset-3.jumbotron
          h2(style="margin-top: 0") Login
          form(method="post")
            .form-group
              label(for='username') User Name
              input#username.form-control(type='Text', placeholder='User Name', name="username")
            .form-group
              label(for='password') Password
              input#password.form-control(type='password', placeholder='Password', name="password")
            button.btn.btn-default(type='submit', style="margin-right: 15px") Submit
            if config.enableRegister
              a(href="/sign_up") Sign Up

